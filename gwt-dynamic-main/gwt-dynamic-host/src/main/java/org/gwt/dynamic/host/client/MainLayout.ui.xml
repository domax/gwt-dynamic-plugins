<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cv="urn:import:com.google.gwt.user.cellview.client">
	
	<ui:style>
		.mainLayout {
			top: 0;
			right: 0;
			bottom: 0;
			left: 0;
		}
		.contentPanel {
			position: absolute;
			top: 1.5em;
			right: 0.5em;
			bottom: 0.5em;
			left: 0.5em;
		}
	</ui:style>

	<g:DockLayoutPanel unit="EM" ui:field="mainLayout" styleName="{style.mainLayout}">
		<g:west size="8.5">
			<cv:CellList ui:field="cellList" />
		</g:west>
		<g:center>
			<g:CaptionPanel captionText="Caption" ui:field="captionPanel">
				<g:SimplePanel ui:field="contentPanel" styleName="{style.contentPanel}" />
			</g:CaptionPanel>
		</g:center>
	</g:DockLayoutPanel>
	
</ui:UiBinder>